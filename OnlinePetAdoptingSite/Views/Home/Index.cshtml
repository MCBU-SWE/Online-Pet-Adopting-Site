@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-4 fw-bold text-primary">Welcome to Online Pet Adopting Site!</h1>
    <p class="lead text-muted mt-3">
        Discover your new best friend today. Find pets looking for loving homes and start the journey to make a difference in their lives.
    </p>
    <div class="mt-4">
        <a class="btn btn-primary btn-lg px-4 me-3" asp-area="" asp-controller="Pets" asp-action="Index">Explore Pets</a>
        <a class="btn btn-outline-secondary btn-lg px-4" asp-area="" asp-controller="Home" asp-action="About">Learn More</a>
    </div>
    <div class="mt-5">
        <img src="~/images/pet-banner.jpg" alt="Pets" class="img-fluid rounded shadow" style="max-height: 400px;"/>
    </div>
</div>