<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"] - Append</title>
    <meta name="description" content="@ViewData["Description"]">
    <meta name="keywords" content="@ViewData["Keywords"]">

    <!-- Favicons -->
    <link asp-href-include="~/assets/img/favicon.png" rel="icon">
    <link asp-href-include="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link asp-href-include="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link asp-href-include="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link asp-href-include="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link asp-href-include="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link asp-href-include="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link asp-href-include="~/assets/css/main.css" rel="stylesheet">
</head>

<body class="index-page">

<!-- Header Section -->
<header id="header" class="header d-flex align-items-center fixed-top">
    <div class="container-fluid position-relative d-flex align-items-center justify-content-between">
        <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center me-auto me-xl-0">
            <h1 class="sitename">Append</h1><span>.</span>
        </a>

        <nav id="navmenu" class="navmenu">
            <ul>
                <li><a asp-controller="Home" asp-action="Index" class="active">Home</a></li>
                <li><a asp-controller="Home" asp-route-fragment="about">About</a></li>
                <li><a asp-controller="Home" asp-route-fragment="services">Services</a></li>
                <li><a asp-controller="Home" asp-route-fragment="portfolio">Portfolio</a></li>
                <li><a asp-controller="Home" asp-route-fragment="pricing">Pricing</a></li>
                <li><a asp-controller="Home" asp-route-fragment="team">Team</a></li>
                <li><a asp-controller="Home" asp-action="Blog">Blog</a></li>
                <li class="dropdown">
                    <a href="#"><span>Dropdown</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                    <ul>
                        <li><a href="#">Dropdown 1</a></li>
                        <li><a href="#">Dropdown 2</a></li>
                    </ul>
                </li>
                <li><a asp-controller="Home" asp-route-fragment="contact">Contact</a></li>
            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>

        <a class="btn-getstarted" asp-controller="Home" asp-route-fragment="about">Get Started</a>

    </div>
</header>

<!-- Main Content Section -->
<main role="main">
    @RenderBody()
</main>

<!-- Footer Section -->
<footer id="footer" class="footer position-relative light-background">
    <div class="container footer-top">
        <div class="row gy-4">
            <div class="col-lg-5 col-md-12 footer-about">
                <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
                    <span class="sitename">Append</span>
                </a>
                <p>Cras fermentum odio eu feugiat lide par naso tierra...</p>
                <div class="social-links d-flex mt-4">
                    <a href="#"><i class="bi bi-twitter"></i></a>
                    <a href="#"><i class="bi bi-facebook"></i></a>
                    <a href="#"><i class="bi bi-instagram"></i></a>
                    <a href="#"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
            <div class="col-lg-2 col-6 footer-links">
                <h4>Useful Links</h4>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container text-center mt-4">
        <p>© 2024 <strong class="sitename">Append</strong>. All Rights Reserved</p>
    </div>
</footer>

<!-- Scroll Top Button -->
<a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

<!-- Preloader -->
<div id="preloader"></div>

<!-- Vendor JS Files -->
<script asp-src-include="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script asp-src-include="~/assets/vendor/php-email-form/validate.js"></script>
<script asp-src-include="~/assets/vendor/aos/aos.js"></script>
<script asp-src-include="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
<script asp-src-include="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
<script asp-src-include="~/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
<script asp-src-include="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
<script asp-src-include="~/assets/vendor/swiper/swiper-bundle.min.js"></script>

<!-- Main JS File -->
<script asp-src-include="~/assets/js/main.js"></script>

<!-- Sayfa Özel Script -->
@RenderSection("Scripts", required: false)
</body>

</html>
